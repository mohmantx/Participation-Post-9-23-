<Window x:Class="Chuck_Norris_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chuck_Norris_API"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Image x:Name="imgChuck" Height="280" Margin="106,64,106,0" VerticalAlignment="Top">
            <Image.OpacityMask>
                <ImageBrush ImageSource="chucknorris.jpg"/>
            </Image.OpacityMask>
        </Image>
        <ComboBox x:Name="cboCategory" HorizontalAlignment="Left" Margin="44,42,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCategory_SelectionChanged"/>
        <Button x:Name="btnJoke" Content="Press for a joke" HorizontalAlignment="Center" Height="59" Margin="0,343,0,0" VerticalAlignment="Top" Width="140" Click="btnJoke_Click"/>
        <Label Content="Select a joke category" HorizontalAlignment="Left" Height="24" Margin="44,13,0,0" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
